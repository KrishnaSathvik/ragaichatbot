{
  "version": 2,
  "builds": [
    { "src": "index.py",   "use": "@vercel/python" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(chat|health|transcribe)", "dest": "/index.py" },
    { "src": "/api/?$",                        "dest": "/index.py" },
    { "src": "/$",                             "dest": "/index.html" },
    { "src": "/(.*)",                          "dest": "/index.html" }
  ],
  "functions": {
    "index.py": { "maxDuration": 30, "memory": 1024 }
  }
}
